{
    "compilerOptions": {
        "strict": true,
        "alwaysStrict": true,
        "strictBindCallApply": true,
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "checkJs": true,
        "jsx": "preserve",
        "isolatedModules": true,
        "outDir": "Build",
        "inlineSourceMap": true,
        "declarationDir": "Include",
        "declaration": true,
        "lib": [
            "DOM",
            "ESNext"
        ]
    },
    "include": [
        "Src/**/*"
    ],
    "references": [
        {
            "path": "./KDInterface/KinkyDungeon"
        },
        {
            "path": "./KDInterface/Generated"
        }
    ]
}